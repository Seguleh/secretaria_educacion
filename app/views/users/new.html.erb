<% provide(:title, 'Nuevo Usuario') %>
<h1>Registrar Usuario</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :first_name, "Nombre" %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name, "Apellido" %>
      <%= f.text_field :last_name %>

      <%= f.label :email, "Correo electronico" %>
      <%= f.email_field :email %>

      <%= f.label :phone_number, "Numero Fijo" %>
      <%= f.text_field :phone_number %>

      <%= f.label :mobile_number, "Numero Celular" %>
      <%= f.text_field :mobile_number %>

      <%= f.label :birth_date, "Fecha de Nacimiento" %>
      <div class="dateselect">
      	<%= f.date_select :birth_date, start_year: 100.years.ago.year, end_year: 18.years.ago.year, order: [:day, :month, :year], default: 18.years.ago, with_css_classes: true %>
      </div>

      <%= f.label :last_name, "Profesión" %>
      <%= f.text_field :last_name %>

      <%= f.label :last_name, "Municipio" %>
      <%= f.text_field :last_name %>

      <%= f.label :password, "Contraseña" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmar contraseña" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Crear usuario", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>